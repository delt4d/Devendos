<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5" Style="text-align: center;">
            @ContactInfo.Name
        </MudText>
    </TitleContent>
    
    <DialogContent>
        <MudChat ChatPosition="ChatBubblePosition.Start">
            @foreach (var phone in ContactInfo.Phones)
            {
                <MudChatBubble Class="d-flex gap-1">
                    <MudIcon Icon="@Icons.Material.Filled.Phone" Title="@phone"/>
                    <MudText>@phone</MudText>
                </MudChatBubble>
            }
        </MudChat>

        <br/>
        <MudText Typo="Typo.subtitle1">Data do Lembrete:</MudText>
        <MudDatePicker @bind-Date="ContactInfo.ReminderDate"
                       Editable="false"
                       Variant="Variant.Outlined"
                       AutoClose="false"
                       Culture="PtBrCulture"
                       TitleDateFormat="@PtBrCulture.DateTimeFormat.ShortDatePattern"
                       DateFormat="@PtBrCulture.DateTimeFormat.LongDatePattern"
                       MinDate="DateTime.Today"/>
        
        <br/>
    </DialogContent>
    
    <DialogActions>
        <MudButton Size="Size.Large"
                   Variant="Variant.Outlined"
                   Color="Color.Primary"
                   OnClick="Cancel">
            Voltar
        </MudButton>
        
        <MudButton Disabled="ContactInfo.ReminderDate is null"
                   StartIcon="@Icons.Material.Filled.AlarmOn"
                   Size="Size.Large"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   OnClick="SaveReminderDateAsync">
            Definir Lembrete
        </MudButton>
    </DialogActions>
</MudDialog>
