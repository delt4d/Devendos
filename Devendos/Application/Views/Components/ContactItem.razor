@if (IsLoading)
{
    <MudElement HtmlTag="div" Class="pb-2">
        <MudSkeleton Height="20px" Width="65px" />
        <MudSkeleton Height="20px" Width="200px" />
        <MudSkeleton Height="20px" Width="150px" />
    </MudElement>
}
else
{
    <MudText Typo="Typo.subtitle1" Class="text-accent-1">
        @ContactInfo.Name
    </MudText>

    @foreach (var phone in ContactInfo.Phones)
    {
        <MudText>@phone</MudText>
    }

    @if (ContactInfo.ReminderDate is null)
    {
        <MudLink OnClick="ShowDialogAsync">
            Definir Lembrete
        </MudLink>
    }
    else
    {
        <MudText Color="Color.Success">Data do Lembrete Definida</MudText>
        <MudElement HtmlTag="div" Class="d-flex">
            <MudLink OnClick="ShowDialogAsync">
                Atualizar Lembrete
            </MudLink>
            <MudSpacer/>
            <MudLink Color="Color.Error" OnClick="RemoveContactReminderDateAsync">
                Remover
            </MudLink>
        </MudElement>
    }
}