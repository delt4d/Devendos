@if (Contacts.Any())
{
    <MudPaper>
        <MudList T="MudListItem<MudElement>" ReadOnly="true">
            @foreach (var (isLastItem, contact) in GetContacts())
            {
                <MudListItem>
                    <MudElement HtmlTag="div">
                        <ContactItem 
                            Contact="contact" 
                            ContactChanged="NotifyContactItemChanged" 
                        />
                        
                        @if (!isLastItem)
                        {
                            <MudDivider Class="mt-4"/>
                        }
                    </MudElement>
                </MudListItem>
            }
        </MudList>
    </MudPaper>
}
else
{
    <MudText Typo="Typo.subtitle1">
        Nenhum contato foi encontrado.
    </MudText>
}